<div id='calendar'></div>

@* Modal for Creating new event *@

<div id="CreateModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="CreateForm" asp-controller="Calendar" asp-action="CreateEvent" method="POST">
                <div class="modal-header">
                    <h4 class="modal-title"><span id="eventTitle"></span></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" type="text" id="txtTitle" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName">Email</label>
                        <input asp-for="UserName" type="text" id="UserName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Start" class="control-label">Start</label>
                        <div class="input-group date" id="dtp1">
                            <input asp-for="Start" type="datetime-local" id="txtCreateStart" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="End">End</label>
                        <div class="input-group date" id="dtp2">
                            <input asp-for="End" type="datetime-local" id="txtCreateEnd" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddressId">Addresse</label>
                        <input type="number" asp-for="AddressId" value="1" readonly />
                        <button type="button" class="btn btn-info" id="createAddress">Vælg adresse</button>
                    </div>
                    <input type="hidden" id="CreateResourceId" asp-for="ResourceId" value="" />
                  </div>
                <div class="modal-footer">
                    <div class="pull-left">
                        <button type="submit" id="btnCreateSave" class="btn btn-success">Save</button>
                    </div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>


@*Modal for showing details when clicking on event in calendar*@
<div id="DetailModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span id="eventTitle"></span></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <div class="pull-left">
                    <button id="btnDelete" class="btn btn-default">Delete</button>
                    <button id="btnEdit" class="btn btn-default" style="margin-right:5px;">Edit</button>
                </div>
                <div class="pull-right">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
</div>

@*Modal for edit existing event*@
<div id="EditModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="UpdateForm" asp-controller="Calendar" asp-action="UpdateEvent" method="post">
                <div class="modal-header">
                    <h4 class="modal-title"><span id="EditTitle"></span></h4>
                    <button type="reset" id="btnEditClose" class="close">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" type="text" value="" id="txtSubject" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Start" class="control-label">Start</label>
                        <div class="input-group date" id="dtp1">
                            <input asp-for="Start" type="datetime-local" id="txtStart" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="End">End</label>
                        <div class="input-group date" id="dtp2">
                            <input asp-for="End" type="datetime-local" id="txtEnd" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <input type="hidden" id="EditId" asp-for="Id" value="" />
                    <input type="hidden" id="EditResourceId" asp-for="ResourceId" value="" />
                    <input type="hidden" id="EditUserName" asp-for="UserName" value="" />
                    <input type="hidden" id="EditAddressId" asp-for="AddressId" value="1" />
                </div>
                <div class="modal-footer">
                    <div class="pull-left">
                        <button type="submit" id="btnSave" class="btn btn-success">Save</button>
                    </div>
                    <div class="pull-right">
                        <button type="reset" id="btnEditCloseFooter" class="btn btn-default">Close</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@*Delete modal*@
<div id="DeleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span id="DeleteEventTitle"></span></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p id="alertText">Er du sikker på du vil slette denne booking</p>
            </div>
                <div class="modal-footer">
                    <div class="pull-left">
                        <form asp-controller="Calendar" asp-action="DeleteEvent" method="post">
                            <input asp-for="Id" type="hidden" id="DeleteId" value="" />
                            <button type="submit" class="btn btn-danger">Confirm</button>
                        </form>
                    </div>
                <div class="pull-left">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuller</button>
                </div>
            </div>
            
        </div>

    </div>

</div>

@*AlertModal*@
<div id="AlertModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span id="eventTitle"></span></h4>
